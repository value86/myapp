<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:mvc="http://www.springframework.org/schema/mvc"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
  http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
  http://www.springframework.org/schema/mvc
  http://www.springframework.org/schema/mvc/spring-mvc.xsd">

  <!-- CORS対応 -->
  <mvc:annotation-driven />
  <mvc:cors>
    <mvc:mapping path="/**"
        allowed-origins="http://localhost:4200, http://localhost:8080, http://127.0.0.1:4200, http://127.0.0.1:8080"
        allowed-methods="GET, PUT, POST, DELETE, OPTIONS, HEAD"
        allow-credentials="true"
        max-age="3600" />
  </mvc:cors>

  <!-- データソース設定 (JDBC) -->
  <bean id="jdbcDataSource"
    class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${spring.datasource.driverClassName}"/>
    <property name="url" value="${spring.datasource.url}" />
    <property name="username" value="${spring.datasource.username}" />
    <property name="password" value="${spring.datasource.password}" />
    <property name="maxTotal" value="${spring.datasource.max-active}"/>
    <property name="maxIdle" value="${spring.datasource.max-idle}" />
    <property name="minIdle" value="${spring.datasource.min-idle}" />
    <property name="initialSize" value="${spring.datasource.initial-size}"/>
    <property name="maxWaitMillis" value="${spring.datasource.max-wait}"/>
  </bean>

  <!-- プロパティーの内容を参照するための設定 -->
  <bean id="propertyConfigurer"
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <list>
        <value>classpath:application.properties</value>
      </list>
    </property>
  </bean>
   <!-- MyBatis トランザクション制御 -->
  <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="jdbcDataSource" />
  </bean>


</beans>

